<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead"><%= @friend.email %> | (<%= @friend.phone[0..2] %>) <%= @friend.phone[3..] %> | <%= @friend.twitter %></p>
